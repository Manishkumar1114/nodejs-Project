<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full p-10 text-black">
      <div class="nav mb-10" >
        <a href="/">Home Page</a>
       </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
          <div class="user max-w-60 p-4 bg-zinc-600 rounded-lg">
            <div class="w-full h-40 rounded-lg bg-red-200 overflow-hidden">
              <img class="w-full h-full object-cover" src="<%= user.image  %>" alt="" srcset="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name  %></h3>
            <h5 class="text-zinc-300"><%= user.email  %></h5>
            <div class="flex gap-3 mt-5">
             <a class="text-zinc-400" href="/edit/<%= user._id %>">Edit User</a>
             <a class="text-red-300" href="/delete/<%= user._id %>">Delete User</a>

            </div>
           </div>
       <%  }) %>
      </div>
    
  </div>


</body>
</html> 